
@model BrickPile.UI.Models.EditModelReferenceModel
@using BrickPile.UI.Common


<div class="overlay">
    <aside class="dialog">
        <div class="additional-block">
            <a href="#" class="close"><img src="@Url.Content("/areas/brickpile.ui/images/dialog-close.png")" alt="close" /></a>
		    <h1>Select page...</h1>
            <div id="scroll">
                <ul id="pages" class="menu">
                    <li><a href ="#@Model.CurrentModel.Metadata.Slug" class="link">@Model.CurrentModel.Metadata.Name</a></li>
                    @foreach (var item in Model.Children) {
                        <li>
                            <a href ="#@item.Metadata.Slug" data-id="@item.Id" class="link">@item.Metadata.Name</a>
                            <a href="#@item.Metadata.Slug" class="button navigator" data-id="@item.Id"><img src="/areas/brickpile.ui/images/next-level.png" alt="Next level" /></a>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <div class="editor-button">
            <span class="button">@Html.ActionLink("No, cancel", @Model.BackAction ?? "index", null, new { @class = "cancel" })</span>
            <span class="button disabled">@Html.ActionLink("Select", @Model.BackAction ?? "index", null, new { @class = "select" })</span>
        </div>

    </aside>
</div>
